<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap">
    <link rel="stylesheet" href="styles/bootstrap-icons.css">
    <link rel="stylesheet" href="styles/bootstrap.min.css">
    <link rel="stylesheet" href="styles/slick.css" />
    <link rel="stylesheet" href="styles/tooplate-little-fashion.css">
    <title>Little Fashion</title>
</head>

<body>
    <section class="preloader">
        <div class="spinner">
            <span class="sk-inner-circle"></span>
        </div>
    </section>

    <main>

        <%- include('partials/header') %>
            <header class="site-header section-padding d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-10 col-12">
                            <h1>
                                <span class="d-block text-primary">Your favorite questions</span>
                                <span class="d-block text-dark">and our answers to them</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </header>

            <section class="faq section-padding">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-12">
                            <h2>General Info.</h2>
                            <div class="accordion" id="accordionGeneral">
                                <% const generalInfo=JSON.parse(faqData.generalInfo)%>
                                    <% generalInfo.forEach((ques,index)=>{%>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading<%=index+1%>">
                                                <button class="accordion-button collapsed" type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#accordionGeneral<%=index+1%>" aria-expanded="true"
                                                    aria-controls="accordionGeneral<%=index+1%>">
                                                    <%= ques.question %>
                                                </button>
                                            </h2>
                                            <div id="accordionGeneral<%=index+1%>" class="accordion-collapse collapse"
                                                aria-labelledby="heading<%=index+1%>"
                                                data-bs-parent="#accordionGeneral">

                                                <div class="accordion-body">
                                                    <p class="large-paragraph">
                                                        <%- ques.answer %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <%})%>
                            </div>

                            <h2 class="mt-5">About <span>our products</span></h2>

                            <div class="accordion" id="accordionProduct">
                                <div class="accordion-item">
                                    <% const aboutProducts=JSON.parse(faqData.aboutProducts)%>
                                        <% aboutProducts.forEach((ques,index)=>{%>
                                            <h2 class="accordion-header" id="heading<%= index+3 %>">
                                                <button class="accordion-button collapsed" type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#accordionProduct<%= index+1 %>"
                                                    aria-expanded="true" aria-controls="accordionProduct<%= index+1 %>">
                                                    <%= ques.question %>
                                                </button>
                                            </h2>

                                            <div id="accordionProduct<%= index+1 %>" class="accordion-collapse collapse"
                                                aria-labelledby="heading<%= index+3 %>"
                                                data-bs-parent="#accordionProduct">

                                                <div class="accordion-body">
                                                    <p class="large-paragraph">
                                                        <%- ques.answer %>
                                                    </p>
                                                </div>
                                            </div>
                                            <%})%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

    </main>
    <%- include('partials/footer') %>

        <!-- JAVASCRIPT FILES -->
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/Headroom.js"></script>
        <script src="js/jQuery.headroom.js"></script>
        <script src="js/slick.min.js"></script>
        <script src="js/custom.js"></script>
</body>

</html>